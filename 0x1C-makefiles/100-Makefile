C = gcc
SRC = main.c school.c
OBJ = $(SRC:.c=.o)
NAME = school
RM := rm -f
CFLAGS := -Wall -Werror -Wextra -pedantic
DEPS = $(SRC:.c=.d)

.PHONY: all clean oclean fclean re

all: $(NAME)

-include $(DEPS)

$(NAME): $(OBJ)
	$(CC) -o $@ $^ $(CFLAGS)

%.o: %.c

clean:
	-$(RM) *~ $(NAME)

oclean:
	-$(RM) $(OBJ)

fclean: clean oclean
	-$(RM) $(NAME)

re: fclean all

ifneq ($(wildcard m.h),)
include $(DEPS)
endif

